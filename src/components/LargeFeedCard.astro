---
import { Icon } from 'astro-icon';

import { getCollection } from "astro:content";
const allFeedPosts = await getCollection('feed');
const latestFeedPost = allFeedPosts.reduce((a, b) => a.data.pubDate > b.data.pubDate ? a : b);

---
<div class="flex bg-sky-50 hover:bg-white shadow-lg rounded-lg mx-4 md:mx-auto max-w-md md:max-w-2xl relative">
   <a href="#" class="absolute w-5 -left-2 -top-2"><Icon name="circle-plus-solid" class="hover:fill-sky-900" /></a>
   <a href="#" class="inline-block ml-4 mb-2 absolute top-5 right-5 w-6"><Icon name={`${latestFeedPost.data.mediaType}`} class="hover:fill-sky-900" /></a>
    <div class="items-start p-5 w-full">
       <a href={`${latestFeedPost.data.url}`} target="_blank"><img class="h-24 object-cover mb-4 shadow" src={`${latestFeedPost.data.thumbnail}`} alt="media"></a>
       <div class="w-full">
          <div class="items-center justify-between">
            <h2 class="text-lg font-bold text-gray-900 -mt-1 leading-6"><a href={`${latestFeedPost.data.url}`} target="_blank" class="text-gray-900 hover:text-sky-900">{latestFeedPost.data.title}</a></h2>      
          </div>
          <p class="text-gray-700 mb-3">{latestFeedPost.data.subtitle}</p>
          <small class="text-sm text-gray-400 float-right mb-3">{latestFeedPost.data.pubDate.toDateString()}</small>
       </div>
    </div>
 </div>
 