---
import { Icon } from 'astro-icon';
import './init.js';
import './lanyard.js';

const response = await fetch('https://api.lanyard.rest/v1/users/849820804341956619');
const statusData = await response.json();
console.log(statusData.data.activities);
---

<div class="flex bg-sky-50 shadow-lg rounded-lg mx-4 md:mx-auto max-w-md md:max-w-2xl mb-4 relative hover:bg-white">
   <a href="#" class="inline-block ml-4 mb-2 w-6 absolute top-5 right-5 w-6 hover:fill-sky-900"><Icon name="spotify" /></a>
   <div class="flex items-start p-5">
      <a href="#"><img class="w-20 h-20 object-cover mr-4 shadow" src={statusData.data.spotify.album_art_url} alt="media"></a>
      <div>
         <div class="flex items-center justify-between mb-1">
            <a href="#"><h2 class="text-xl font-bold text-gray-900 hover:text-sky-900 -mt-1">{statusData.data.spotify.song}</h2></a>
         </div>
         <p class="text-gray-700 text-md leading-6">
            <span class="uppercase text-xs text-gray-400">artist </span>{statusData.data.spotify.artist}<br />
            <span class="uppercase text-xs text-gray-400">album </span><span class="italic">{statusData.data.spotify.album}</span></p>
      </div>
   </div>
</div>