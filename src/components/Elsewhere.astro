---
import SpotifyCard from "./SpotifyCard.svelte";
import ElsewhereIcons from "./ElsewhereIcons.astro";
---

<div id="elsewhere" class="grid lg:grid-cols-3 gap-6 mb-24 w-full">
    <div class="col-span-3 text-right">
        <h3 class="text-2xl"><span class="font-display text-5xl text-sky-900">elsewhere</span></h3>
        <p class="text-gray-400 uppercase text-xs tracking-wider mb-4 md:mb-1">catch me online</p>
    </div>
    <div class="col-span-3 md:col-auto icons md:text-right w-full">
        <ElsewhereIcons />
    </div>
    <div class="col-span-3 lg:col-span-2 w-full">
        <SpotifyCard  client:only="svelte" />
    </div>
</div>